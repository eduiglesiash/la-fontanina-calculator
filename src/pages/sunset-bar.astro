---
import Layout from "../layouts/Layout.astro";
import SunsetProduct from "../components/SunsetProduct.astro";
import HamburgerIcon from "../components/icons/HamburguerIcon.astro";
import { sunsetBar } from "../config/listOfProductsSunset.js";
---

<Layout title="Carta de comida y bebida del Sunset Bar">
  <h1 class="text-8xl text-center">Sunset Bar</h1>
  <main>
    <section>
      <h2 class="text-6xl mb-8 flex flex-row gap-x-8">
        <span> Pa' Comer</span>
        <HamburgerIcon />
      </h2>
      <ul class="foodlist">
        {
          sunsetBar.comida.map(({ product, price, detail, options, extra }) => (
            <li>
              <SunsetProduct
                product={product}
                price={price}
                detail={detail}
                options={options}
                extra={extra}
              ></SunsetProduct>
            </li>
          ))
        }
      </ul>
    </section>
  </main>
</Layout>
<style>
  body {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
      Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
      sans-serif;
    font-size: 16px;
  }
  main,
  h1,
  h2 {
    display: grid;
    place-content: center;
  }
  body {
    background: top left no-repeat url("/img/pattern_yellow-top-left.png"),
      bottom right no-repeat url("/img/pattern_yellow-bottom-right.png");
  }
  main {
    padding: 24px;
  }
  h1,
  h2,
  h3 {
    font-family: "playball";
  }
  .foodlist {
    display: flex;
    flex-direction: column;
    row-gap: 28px;
  }
</style>
